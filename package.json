{
  "name": "my-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "clean": "rimraf /public/dist",
    "uglify:css": "uglifycss public/css/styles.css > public/css/styles.min.css",
    "uglify:html": "html-minifier --minify-css --minify-js --remove-comments --collapse-whitespace public/index.template.html -o public/index.html",
    "uglify": "npm run uglify:css && npm run uglify:html",
    "prep": "npm run clean && npm run uglify",
    "analyze": "npm run clean && cross-env NODE_ENV=production webpack --config webpack/webpack.analyze.js",
    "start": "npm run prep && webpack --config webpack/webpack.dev.js && webpack-dev-server --config webpack/webpack.dev.js",
    "build": "npm run prep && cross-env NODE_ENV=production webpack --config webpack/webpack.prod.js"
  },
  "author": "",
  "private": true,
  "dependencies": {
    "aphrodite": "^2.2.3",
    "lodash": "^4.17.4",
    "prop-types": "^15.6.0",
    "react": "^16.5.1",
    "react-dom": "^16.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.0",
    "babel-jest": "^23.4.0",
    "babel-loader": "8.0.4",
    "babel-plugin-transform-imports": "^1.5.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.15",
    "cross-env": "^5.1.3",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.11.1",
    "html-minifier": "^3.5.18",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0",
    "jest": "^23.5.0",
    "rimraf": "^2.6.2",
    "uglifycss": "^0.0.29",
    "uglifyjs-webpack-plugin": "^2.0.0",
    "webpack": "^4.16.5",
    "webpack-bundle-analyzer": "^3.0.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run lint",
      "post-merge": "yarn",
      "post-checkout": "yarn"
    }
  }
}
